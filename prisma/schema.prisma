generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model actions {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  project String
  urgency Int
  date DateTime 
  time Int 
  people String 
  isFocused Boolean
  isChecked Boolean
  userId String
  tag String @default("action")
  history Boolean
}

model projects {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

